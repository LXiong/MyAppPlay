<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

    </style>

    <style name="AppTheme.ToolBar" parent="AppTheme">
        <item name="drawerArrowStyle">@style/AppTheme.DrawerArrowStyle</item>
        <item name="android:windowActionBarOverlay">@style/ActionButton.Overflow</item>
        <item name="actionOverflowButtonStyle">@style/ActionButton.Overflow</item>
        <item name="android:textColor">@android:color/white</item>

    </style>

    <style name="AppTheme.TabLayout" parent="AppTheme">
        <item name="tabTextColor">@android:color/white</item>
        <item name="tabSelectedTextColor">@android:color/white</item>
        <item name="tabBackground">@color/colorPrimary</item>
    </style>

    <style name="AppTheme.DrawerArrowStyle" parent="Base.Widget.AppCompat.DrawerArrowToggle">
        <item name="color">@android:color/white</item>
    </style>

    <style name="ActionButton.Overflow" parent="android:Widget.Holo.Light.ActionButton.Overflow">
        <item name="android:src">@drawable/more</item>>
    </style>

    <style name="AppTheme.Notitle" parent="AppTheme">
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
    </style>

    <style name="AppTheme.Notitle.FullScreen" parent="AppTheme.Notitle">
        <item name="android:windowFullscreen">true</item>
    </style>

    <style name="dialog_blue_button" parent="android:Widget.Button">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">31dp</item>
        <item name="android:background">@drawable/blue_button_background</item>
        <item name="android:textSize">14sp</item>
        <item name="android:paddingLeft">21dp</item>
        <item name="android:paddingRight">21dp</item>
        <item name="android:textColor">@android:color/white</item>
    </style>


    <style name="Text_Title">

        <item name="android:layout_marginTop">5dp</item>
        <item name="android:textSize">16dp</item>
        <item name="android:textColor">@color/md_black_1000</item>

    </style>

    <style name="Text_Content">

        <item name="android:textSize">14dp</item>
        <item name="android:textColor">@color/md_grey_400</item>
    </style>

    <style name="TabLayoutTextAppearance" parent="TextAppearance.AppCompat.Widget.ActionBar.Title">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="GridView">
        <item name="android:gravity">center</item>
        <item name="android:padding">@dimen/recommend_grid_padding</item>
        <item name="android:horizontalSpacing">@dimen/recommend_grid_gap</item>
        <item name="android:verticalSpacing">@dimen/recommend_grid_gap</item>
        <item name="android:stretchMode">columnWidth</item>
        <item name="android:numColumns">2</item>
    </style>

    <style name="AppTheme.Transparent" parent="AppTheme">
        　　<item name="android:windowBackground">@android:color/transparent</item>
        　　<item name="android:windowIsTranslucent">true</item>
    </style>

    <style name="Text_Title_Large" parent="Text_Title">
        <item name="android:textSize">20dp</item>
    </style>

    <style name="Text_Content_grey_800">
        <item name="android:textSize">14dp</item>
        <item name="android:textColor">@color/md_grey_800</item>
    </style>

    <style name="btn" parent="Base.TextAppearance.AppCompat.Widget.Button">
        <item name="android:background">@drawable/bg_btn</item>
        <item name="android:textColor">@color/color_btn</item>
    </style>

    <style name="btn_small" parent="btn">
        <item name="android:layout_width">50dp</item>
        <item name="android:layout_height">30dp</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar"/>
    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light"/>

    <style name="RatingBar.ReadOnly" parent="@android:style/Widget.RatingBar">
        <item name="android:maxHeight">@dimen/ratingbar_readonly_size</item>
        <item name="android:progressDrawable">@drawable/ratingbar_readonly</item>
        <item name="android:minHeight">@dimen/ratingbar_readonly_size</item>
        <item name="android:stepSize">0.5</item>
        <item name="android:isIndicator">true</item>
        <item name="android:numStars">5</item>
    </style>

</resources>
